#!/usr/bin/env bash

hextorgb() {
	hex="$1"
	printf "%d %d %d\n" 0x${hex:0:2} 0x${hex:2:2} 0x${hex:4:2}
}

a=( $(hextorgb $1) )

r="$(bc <<< "${a[0]} * ${2:-0.8}" | sed 's/\..*$//g')"
g="$(bc <<< "${a[1]} * ${2:-0.8}" | sed 's/\..*$//g')"
b="$(bc <<< "${a[2]} * ${2:-0.8}" | sed 's/\..*$//g')"

[[ $r -gt 255 ]] && r=255
[[ $g -gt 255 ]] && g=255
[[ $b -gt 255 ]] && b=255


echo "$(printf "%02X%02X%02X\n" $r $g $b)"
